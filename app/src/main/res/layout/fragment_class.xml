<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="22dp"
        android:backgroundTint="@color/app_blue_color"
        android:contentDescription="@string/app_name"
        android:drawableTop="@drawable/ic_baseline_headset_mic_24"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="HELP"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:iconPadding="-3dp"
        app:layout_anchorGravity="bottom|right|end"

        />

    <TextView
        android:id="@+id/book_free_class_TV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Book A Free Class Now (45 mins)"
        android:textColor="@color/white"
        android:background="@color/app_blue_color"
        android:elevation="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <ScrollView
        android:layout_above="@id/book_free_class_TV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_2_tile"
                android:paddingStart="17dp"
                android:paddingTop="17dp">

                <TextView
                    android:id="@+id/OneonOne_pvt_class_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 on 1, Face to Face\nClass with Faculty\nOn Video Call"
                    android:textColor="@color/white"
                    android:textSize="22sp"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/OneonOne_pvt_class_TV"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/book_free_class_bg"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="Book Free Class Now"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:text="Doubt Classes : 1 on 1, Face to Face Session With Faculty(On Video Call)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="18dp"
                app:cardCornerRadius="15dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:sliderAnimationDuration="1000"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="1000"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="4dp"
                    app:sliderIndicatorRadius="1dp"
                    app:sliderIndicatorSelectedColor="@color/white"
                    app:sliderIndicatorUnselectedColor="@color/app_blue_color"
                    app:sliderScrollTimeInSec="3"
                    app:sliderStartAutoCycle="true"
                    tools:background="@color/purple_200" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_dull_blue_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:paddingVertical="10dp"
                        android:text="Benefits of Doubt Classes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        app:tint="@color/white" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="35dp">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="25dp"
                        app:cardElevation="20dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toTopOf="@id/personal_interaction_card"
                        app:layout_constraintEnd_toEndOf="@+id/personal_interaction_card"
                        app:layout_constraintStart_toStartOf="@+id/personal_interaction_card"
                        app:layout_constraintTop_toTopOf="@+id/personal_interaction_card">

                        <ImageView
                            app:tint="#25870D"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_person_24"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="25dp"
                        app:cardElevation="20dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toTopOf="@id/real_time_video_card"
                        app:layout_constraintEnd_toEndOf="@+id/real_time_video_card"
                        app:layout_constraintStart_toStartOf="@+id/real_time_video_card"
                        app:layout_constraintTop_toTopOf="@+id/real_time_video_card">

                        <ImageView
                            app:tint="#DC0C97"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_person_24"/>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/personal_interaction_card"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toStartOf="@id/real_time_video_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:gravity="center_horizontal"
                                android:text="Personal\nInteraction"
                                android:textColor="@color/black"
                                android:textSize="15.5sp" />

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="11dp"
                                android:gravity="center_horizontal"
                                android:text=" has some menu items in the Toolbar, and if we could display these as well, it would be perfect. " />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/real_time_video_card"
                        android:layout_marginTop="40dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/personal_interaction_card"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:gravity="center_horizontal"
                                android:text="Real-Time Video\nCall"
                                android:textColor="@color/black"
                                android:textSize="15.5sp" />

                            <TextView
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="11dp"
                                android:gravity="center_horizontal"
                                android:text=" has some menu items in the Toolbar, and if we could display these as well, it would be perfect. "

                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/what_Student_say_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="What our\nstudents\nsay about\ndoubt\nclasses"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/slider_bg" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/what_Student_say_TV"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_baseline_arrow_forward_24"

                    app:tint="@color/app_blue_color" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_dull_blue_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Buy Doubt Classes"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/app_blue_color"
                    app:cardCornerRadius="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/white"
                        app:cardCornerRadius="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <ImageView
                                android:id="@+id/headphone_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_headset_mic_24"
                                app:tint="#F8872F" />

                            <ImageView
                                android:id="@+id/chat_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@id/headphone_icon"
                                android:src="@drawable/ic_baseline_chat_24"
                                app:tint="#FFE303" />

                            <ImageView
                                android:id="@+id/money_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@id/chat_icon"
                                android:src="@drawable/ic_baseline_monetization_on_24"
                                app:tint="#0A405A" />

                            <ImageView
                                android:id="@+id/person_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:layout_toRightOf="@id/money_icon"
                                android:src="@drawable/ic_baseline_person_24"
                                app:tint="#DD12CC1B" />

                            <TextView
                                android:id="@+id/liveClassesDoutsTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/headphone_icon"
                                android:layout_marginTop="10dp"
                                android:text="@string/live_class_doubts"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/liveClassesDoutsTV"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="#60000000" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Concept Videos"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="#60000000" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="NCERT Solutions"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="#60000000" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Textbooks"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="#60000000" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Revision Notes"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="@color/app_blue_color" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="5 One On One\nClasses"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="@color/app_blue_color" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="25 Doubt Credits"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="@color/app_blue_color" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Personal Mentor"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="@color/app_blue_color" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Interactive Learning"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="8dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/tick_mark"
                                            app:tint="@color/app_blue_color" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="9dp"
                                            android:text="Test Prep"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>